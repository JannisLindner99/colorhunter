{
    "manifest_version": 3,
    "name": "Color Hunter",
    "version": "1.0.0",
    "icons": {
        "16": "dist/icon16.png",
        "32": "dist/icon32.png",
        "48": "dist/icon48.png",
        "128": "dist/icon128.png"
    },
    "action": {
        "default_popup": "index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "assets/color-scanner.js"
            ]
        }
    ],
    "permissions": [
        "tabs"
    ]
}